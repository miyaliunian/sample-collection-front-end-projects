{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "suppressImplicitAnyIndexErrors":true,
    "types": [
      "vite/client",
      "node"
     ],
     "baseUrl": ".",
     "paths": {
      // 路径映射，相对于baseUrl
        "@/*":["src/*"]
      }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/mock/index.ts", "src/mock/index.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
